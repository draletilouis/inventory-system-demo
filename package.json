{
  "name": "inventory-system",
  "version": "1.0.0",
  "description": "Inventory Management System with Node.js backend",
  "main": "server.js",
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --coverage --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "migrate": "node -e \"console.log('Database will be auto-initialized on first run')\"",
    "init-postgres": "node src/database/init-postgres.js",
    "clear-database": "node scripts/database/clear-database.js",
    "clear-database-auto": "node scripts/database/clear-database-auto.js",
    "create-demo-users": "node scripts/database/create-demo-users.js",
    "create-production-users": "node scripts/database/create-production-users.js",
    "backup": "node scripts/backup.js",
    "generate-secret": "node -e \"console.log('SESSION_SECRET=' + require('crypto').randomBytes(32).toString('hex'))\""
  },
  "keywords": [
    "inventory",
    "management",
    "express",
    "postgresql",
    "spare-parts"
  ],
  "author": "draletilouis",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "server.js",
      "src/database/database.js",
      "src/database/init-postgres.js"
    ]
  }
}
